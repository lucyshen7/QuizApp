<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Create a quiz</title>
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
    <link rel="stylesheet" href="/styles/quiz_results.css" type="text/css" />
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>

    <!-- Font awesome library-->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      type="text/css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />

    <!-- fonts for CSS -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@100&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <%- include('partials/_header') %> <% if(user) { %>
    <div class="create_new_quiz">
      <p class="create_title"><b>Create a new quiz</b></p>
      <form method="POST" action="/quizzes/new">
        <div class="quiz_info_form">
          <label>Quiz</label>
          <input name="quizName" required />
          <label>Subject</label>
          <input name="subject" required />
          <label>Difficulty Level</label>
          <input name="difficulty" required />
        </div>
        <button class="try_again create_btn" type="submit">Create</button>
      </form>
    </div>

    <% } else { %>
    <div class="login_msg">
      <span class="login_msg">
        <p class="login_msg">Please login to create a quiz</p>
      </span>
    </div>
    <% } %>
  </body>
</html>
