<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Create a quiz</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
    <link rel="stylesheet" href="/styles/quiz_results.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>

    <!-- Font awesome library-->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      type="text/css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />

    <!-- fonts for CSS -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@100&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <%- include('partials/_header') %> <% if(user) { %>
    <div class="create_new_quiz">
      <p class="create_title"><b>Create a new quiz</b></p>
      <form method="POST" action="/quizzes/new">
        <div class="quiz_info_form">
          <label>Quiz</label>
          <input name="quizName" required />
          <label>Subject</label>
          <input name="subject" required />
          <label>Difficulty Level</label>
          <input name="difficulty" required />
        </div>

        <div class="quiz_question_container">
          <div class="question_box">
            <div class="question_1">
              <div class="single_question_box">
                <label id="question1">Question 1</label>
                <input class="question_input" name="questions" required />
              </div>
              <div class="solutions">
                <div class="question_options">
                  <div>Insert answer</div>
                  <label for="answers1">A</label>
                  <input name="answers1" required />
                  <label for="answers1">B</label>
                  <input name="answers1" required />
                  <label for="answers1">C</label>
                  <input name="answers1" required />
                </div>
                <div class="question_options">
                  <div>Select correct answer</div>
                  <label>A</label>
                  <input
                    type="radio"
                    class="bubble"
                    name="soln1"
                    value="A"
                    required
                  />
                  <label>B</label>
                  <input
                    type="radio"
                    class="bubble"
                    name="soln1"
                    value="B"
                    required
                  />
                  <label>C</label>
                  <input
                    type="radio"
                    class="bubble"
                    name="soln1"
                    value="C"
                    required
                  />
                </div>
              </div>
            </div>

            <div class="question_1">
              <div class="single_question_box">
                <label id="question2">Question 2</label>
                <input name="questions" required />
              </div>
              <div class="solutions">
                <div class="question_options">
                  <div>Insert Answer</div>
                  <label for="answers2">A</label>
                  <input name="answers2" required />
                  <label for="answers2">B</label>
                  <input name="answers2" required />
                  <label for="answers2">C</label>
                  <input name="answers2" required />
                </div>
                <div class="question_options">
                  <div>Select correct answer</div>
                  <label>A</label>
                  <input
                    type="radio"
                    class="bubble"
                    name="soln2"
                    value="A"
                    required
                  />
                  <label>B</label>
                  <input
                    type="radio"
                    class="bubble"
                    name="soln2"
                    value="B"
                    required
                  />
                  <label>C</label>
                  <input
                    type="radio"
                    class="bubble"
                    name="soln2"
                    value="C"
                    required
                  />
                </div>
              </div>
            </div>

            <div class="question_1">
              <div class="single_question_box">
                <label id="question3">Question 3</label>
                <input name="questions" required />
              </div>
              <div class="solutions">
                <div class="question_options">
                  <div>Insert Answer</div>
                  <label for="answers3">A</label>
                  <input name="answers3" required />
                  <label for="answers3">B</label>
                  <input name="answers3" required />
                  <label for="answers3">C</label>
                  <input name="answers3" required />
                </div>
                <div class="question_options">
                  <div>Select correct answer</div>
                  <label>A</label>
                  <input
                    type="radio"
                    class="bubble"
                    name="soln3"
                    value="A"
                    required
                  />
                  <label>B</label>
                  <input
                    type="radio"
                    class="bubble"
                    name="soln3"
                    value="B"
                    required
                  />
                  <label>C</label>
                  <input
                    type="radio"
                    class="bubble"
                    name="soln3"
                    value="C"
                    required
                  />
                </div>
              </div>
            </div>

            <div class="question_1">
              <div class="single_question_box">
                <label id="question4">Question 4</label>
                <input name="questions" required />
              </div>
              <div class="solutions">
                <div class="question_options">
                  <div>Insert Answer</div>
                  <label for="answers4">A</label>
                  <input name="answers4" required />
                  <label for="answers4">B</label>
                  <input name="answers4" required />
                  <label for="answers4">C</label>
                  <input name="answers4" required />
                </div>
                <div class="question_options">
                  <div>Select correct answer</div>
                  <label>A</label>
                  <input
                    type="radio"
                    class="bubble"
                    name="soln4"
                    value="A"
                    required
                  />
                  <label>B</label>
                  <input
                    type="radio"
                    class="bubble"
                    name="soln4"
                    value="B"
                    required
                  />
                  <label>C</label>
                  <input
                    type="radio"
                    class="bubble"
                    name="soln4"
                    value="C"
                    required
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
        <button class="try_again create_btn" type="submit">Create</button>
      </form>
    </div>

    <% } else { %>
    <div class="login_msg">
      <span class="login_msg">
        <p class="login_msg">Please login to create a quiz</p>
      </span>
    </div>
    <% } %>
  </body>
</html>
